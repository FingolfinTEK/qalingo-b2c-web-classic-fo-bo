#set ($layout = "default/www/default/layout/default.vm")
#set ($page_title = $seoPageTitle)
#set ($footer_script_content = "../content/store-location/store-location-footer.vm")

			
		    <section id="store-locator">
					<div class="page-header">
						<h1>$wording.get("fo.store_locator.header_title")</h1>
					</div>
					
					<div style="padding-bottom: 50px;">
						<div style="padding-bottom: 20px;">$wording.get("fo.store_locator.content_text")</div>
						<div class="clear border-btm margin-top10"></div>
						<div class="row location-filter-bar">
							<div class="span3 filter-country">
								<label>Choose country</label>
								<select id="country" class="filter-country-slt">
									<option value="" selected="selected">Country</option>
								</select>
							</div>
							<div class="span6 filter-city">
								<label>Choose City/Province</label>
								<select id="city" class="filter-city-slt">
									<option value="" selected="selected">City/Province</option>
								</select>
							</div>
							<div class="span3 filter-search">
								<form class="filter-search-form" onsubmit="return false">
									<input id="search" type="text" placeholder="Search store..." class="filter-textbox">
									<button id="bt-search" class="filter-search-btn"><i class="icon-search">&nbsp;</i></button>
								</form>
							</div>
						</div>
						<div class="clear border-btm"></div>
						<div id="map-store" style="clear: both; width: 1170px; height: 400px;"></div>
						#foreach($store in $storeLocator.stores) 
						<div id="store-info-$store.code" style="display: none;">
						$store.address1<br/>
						$store.city<br/>
						$store.country<br/>
						</div>
						#end
					</div>
					<div class="clear border-btm"></div>
					<!-- slide location list  -->
					<div id="location-store-list" class="linked-logos-slide location-store-list">
						<div class="slides_container row  products-grid">
							#set ($count = 0 );
							#foreach($store in $storeLocator.stores)
								#if($count == 0)
									<div class="slide">
								#end 
								<div class="item span3">
									<a href="javascript:void(0);" class="store-item">
										<span class="store-thumb"><img src="/fo-mcommerce-resources/default/img/home/slider-1.jpg" alt="Store1"></span>
										<div class="store-item-info">
											<h2 class="store-list-title">$store.businessName</h2>
											<span class="store-list-address"><i class="icon-map-marker"></i> $store.address1</span>
										</div>
									</a>
								</div>
								#set ($count = $count + 1);
								#if($count == 4)
									</div>
									#set ($count = 0);
								#end		
							#end
							#if($count != 0)
								</div>
							#end
							
						</div>
					</div>
					<!-- //slide location list  -->
					<div class="clear border-btm"></div>
			</section>

				